<header class="page-header events-header">
{{!partial "calendar-svg"}}
<h1>{{moment currentDay "MMMM D, YYYY"}}</h1>
</header>
<div class="events-body">
  <div class="row">
    {{date-picker value=currentDay class="col-sm-4"}}
    <div class="col-sm-8">
      <h2>Featured Events</h2>
      {{#archive-list items=featuredEvents load="transitionToEvent" show="showEvent"}}
        <div class="well">
        <h3>There Are no Featured Events today.</h3>
        {{!-- {{partial _crying-face}} --}}
        </div>
      {{/archive-list}}
    </div>
  </div>

  {{#if hasAllDayEvents}}
    <h2>All Day Events</h2>
    {{archive-list items=allDayEvents load="transitionToEvent" show="showEvent"}}
  {{/if}}

  <section class="events-list">
    <header class="page-header">
      <h2>Events List</h2>
    </header>
    {{#archive-list items=filteredEvents load="transitionToEvent" show="showEvent"}}
      <div class="well">
      <h3>Your search for events on {{date currentDay}} rendered no results.</h3>
      {{!-- {{partial _crying-face}} --}}
      </div>
    {{/archive-list}}
  </section>

  {{outlet}}
</div>
