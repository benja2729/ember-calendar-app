
<div class="row">
  <div class="col-sm-5">
    <strong>{{titleize content.title}}</strong>
  </div>
  <div class="col-sm-4">
  {{#if content.isMultiDay}}
    {{range content.range showDayOfWeek=true}}
  {{else}}
    {{range content.range showDate=false}}
  {{/if}}
  </div>
  {{#if content.location}}
    <div class="col-sm-3"><strong>Location: </strong>{{content.location}}</div>
  {{/if}}
</div>
