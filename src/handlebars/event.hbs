
{{partial "day-header"}}

<button class="btn btn-primary" {{action "loadState" "day"}}>
  <i class="icon-long-arrow-left"></i> Events
</button>

<div class="media">

  {{! imgUrl doesn't exist upon writing. Just using as a place holder}}
  {{#if imgUrl}}
  <a class="pull-left" href="#">
    <img class="media-object" src="..." alt="...">
  </a>
  {{/if}}

  <div class="media-body">
    <h4 class="media-heading">{{titleize title}}</h4>
    <p>
    {{#if isMultiDay}}
      {{range range}}
    {{else}}
      {{date start}}<br />
      {{range range showDate=false}}
    {{/if}}
    </p>
    <p><b>Location: </b>{{#if location}}{{location}}{{else}}To Be Determined{{/if}}</p>
    {{#if description}}{{showdown description}}{{/if}}
    {{#if moreInfoUrl}}
      <p><a {{bind-attr href=moreInfoUrl}} target="_blank">More Information &nbsp;&gt;&gt;</a><p>
    {{/if}}
  </div>
</div>

{{#if filteredEvents}}
  <header class="page-header">
    <h2>Events List</h2>
  </header>
  <div class="row fader">
  {{#each filteredEvents}}
    {{archive-item content=this classNames="col-md-6" action="transitionToEvent"}}
  {{/each}}
  </div>
{{/if}}

{{outlet}}
