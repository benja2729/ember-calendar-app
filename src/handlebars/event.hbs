<section>
  <h3>{{title}}</h3>
  <p>
    {{date startDate}}
    {{#if isMultiDay}} - {{date endDate}}{{/if}}
    <br />
    {{time start}} - {{time end}}
  </p>
  <p><b>Location: </b>{{location}}</p>
  {{#if description}}{{showdown description}}{{/if}}
  {{outlet}}
</section>
<footer>
{{#if url}}
  <a {{bindAttr href="url"}}>More Information &nbsp;&gt;&gt;</a>
{{/if}}
</footer>
