
{{!-- outlet "filterPane"}}
<aside class="pane side-pane filter-pane">
--}}
<aside {{bind-attr class=":st-menu view.transitionEffect"}} {{action "closeMenu" "st-menu" target=view on="mouseLeave"}}>
  <h2>Categories</h2>
  {{category-select-wrapper action="updateCategories" categories=allCategories activeCategories=activeCategories}}
</aside>

{{!-- <section class="pane main-pane"> --}}
<div class="st-pusher">
  <section class="st-content">
    <div class="pane-body app-body">

      {{partial "app-header"}}

      {{outlet}}
      <div {{bind-attr class=":st-pusher-skin filtersAreOpen:visible:hidden"}} {{action "closeMenu" "st-pusher-skin" target="view"}}></div>
    </div>
  </section>
</div>
</section>
